{
  "info": {
    "name": "TodoList App API",
    "description": "Complete API collection for TodoList app with auth, CRUD, sharing, and media upload",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_email",
      "value": "test@example.com",
      "type": "string"
    },
    {
      "key": "list_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "item_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Authentication",
      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('verification_code', jsonData.code);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{user_email}}\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Verify Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{user_email}}\",\n  \"code\": \"{{verification_code}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/verify",
              "host": ["{{base_url}}"],
              "path": ["auth", "verify"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('token', jsonData.token);",
                  "    pm.environment.set('user_id', jsonData.user.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{user_email}}\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "2. CAPTCHA",
      "item": [
        {
          "name": "Generate CAPTCHA",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('captcha_id', jsonData.captcha_id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/captcha/generate",
              "host": ["{{base_url}}"],
              "path": ["captcha", "generate"]
            }
          }
        },
        {
          "name": "Get CAPTCHA Image",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/captcha/image/{{captcha_id}}",
              "host": ["{{base_url}}"],
              "path": ["captcha", "image", "{{captcha_id}}"]
            }
          }
        },
        {
          "name": "Verify CAPTCHA",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"captcha_id\": \"{{captcha_id}}\",\n  \"solution\": \"AB2C7D\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/captcha/verify",
              "host": ["{{base_url}}"],
              "path": ["captcha", "verify"]
            }
          }
        }
      ]
    },
    {
      "name": "3. Todo Lists",
      "item": [
        {
          "name": "Get User Lists",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/lists",
              "host": ["{{base_url}}"],
              "path": ["lists"]
            }
          }
        },
        {
          "name": "Create List",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('list_id', jsonData.list_id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My Shopping List\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/lists",
              "host": ["{{base_url}}"],
              "path": ["lists"]
            }
          }
        },
        {
          "name": "Delete List",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/lists/{{list_id}}",
              "host": ["{{base_url}}"],
              "path": ["lists", "{{list_id}}"]
            }
          }
        },
        {
          "name": "Share List",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"shared_user_id\": 999,\n  \"role\": \"editor\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/lists/{{list_id}}/share",
              "host": ["{{base_url}}"],
              "path": ["lists", "{{list_id}}", "share"]
            }
          }
        }
      ]
    },
    {
      "name": "4. Todo Items",
      "item": [
        {
          "name": "Get Items",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/lists/{{list_id}}/items",
              "host": ["{{base_url}}"],
              "path": ["lists", "{{list_id}}", "items"]
            }
          }
        },
        {
          "name": "Add Item",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('item_id', jsonData.item_id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Buy milk\",\n  \"list_id\": {{list_id}}\n}"
            },
            "url": {
              "raw": "{{base_url}}/lists/{{list_id}}/items",
              "host": ["{{base_url}}"],
              "path": ["lists", "{{list_id}}", "items"]
            }
          }
        },
        {
          "name": "Update Item",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"list_id\": {{list_id}},\n  \"content\": \"Buy organic milk\",\n  \"is_done\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/items/{{item_id}}",
              "host": ["{{base_url}}"],
              "path": ["items", "{{item_id}}"]
            }
          }
        },
        {
          "name": "Delete Item",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/items/{{item_id}}?list_id={{list_id}}",
              "host": ["{{base_url}}"],
              "path": ["items", "{{item_id}}"],
              "query": [
                {
                  "key": "list_id",
                  "value": "{{list_id}}"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "5. Media Upload",
      "item": [
        {
          "name": "Upload Image",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "user_id",
                  "value": "{{user_id}}",
                  "type": "text"
                },
                {
                  "key": "list_id",
                  "value": "{{list_id}}",
                  "type": "text"
                },
                {
                  "key": "item_id",
                  "value": "{{item_id}}",
                  "type": "text"
                },
                {
                  "key": "media_type",
                  "value": "image",
                  "type": "text"
                },
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/media/upload",
              "host": ["{{base_url}}"],
              "path": ["media", "upload"]
            }
          }
        }
      ]
    }
  ]
}


